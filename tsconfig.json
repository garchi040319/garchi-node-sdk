{
  "compilerOptions": {
    "noEmit": false,
    "allowJs": true,                  // Disallow JavaScript files
    "module": "Preserve",             
    "target": "ESNext",                  // Target ES6 for better compatibility
    "strict": true,                    // Enable strict type checking
    "esModuleInterop": true,           // Ensure compatibility with ES modules
    "resolveJsonModule": true,         // Allow importing JSON files
  
    "allowSyntheticDefaultImports": true,
   
    "skipLibCheck": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
  },
  "include": ["src/**/*"],                  // Include only the 'src' folder
  "exclude": ["node_modules", "dist"]  // Exclude unnecessary files from compilation
}

